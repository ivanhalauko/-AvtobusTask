@model IEnumerable<UrlShortener.Web.Models.LinksInformationViewModel>

@{
    ViewData["Title"] = "MainPage";
}

<style>
    thead input {
        width: 100%;
    }
</style>
<td>
    <a class="btn btn-sm btn-primary bg-orange" asp-action="CreateShortUrl">Create New</a>
</td>

<table id="example" class="display" style="width:100%; border-width:1px" style="display: inline-block">
    <thead>
        <tr>
            <th hidden>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.ShortUrl)
            </th>
            <th>
                Short Url's link
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityClick)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td hidden>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                <a href="@Html.DisplayFor(modelItem => item.Url)">
                        @Html.DisplayFor(modelItem => item.Url)
                </a>
            </td>
            <td hidden>
                @Html.DisplayFor(modelItem => item.ShortUrl)
            </td>
            <td>
                <a asp-controller="Home" asp-action="RedirectTo"
                   asp-route-shortUrl=@item.ShortUrl>
                   @Html.DisplayFor(modelItem => item.ShortUrl)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityClick)
            </td>
            <td>
                    @Html.ActionLink("Edit", "UpdateUrl", new { shortUrl = item.ShortUrl  }) |
                @Html.ActionLink("Delete", "DeleteUrl", new {  shortUrl = item.ShortUrl  })
            </td>
        </tr>
}
    </tbody>
</table>
